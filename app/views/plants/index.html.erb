<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Water</th>
      <th>Fertilize</th>
      <th>Prune</th>
      <th>Repot</th>
      <th>Notes</th>
      <th>Img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.water %></td>
        <td><%= plant.fertilize %></td>
        <td><%= plant.prune %></td>
        <td><%= plant.repot %></td>
        <td><%= plant.notes %></td>
        <td><%= plant.img %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

